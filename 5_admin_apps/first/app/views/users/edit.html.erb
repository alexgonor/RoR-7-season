<h1>Editing user</h1>
<%= form_with(model: @user, url: user_path, method: :patch, local: true) do |form| %>

<p>
  <%= form.label :email %><br />
  <%= form.text_field :email %>
</p>

<p>
  <%= image_tag(@user.avatar_url(:thumb)) %>
  <%= form.file_field :avatar %>
</p>

<p>
  <%= form.submit %>
</p>
<% end %>
