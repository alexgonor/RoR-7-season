<h1>Editing flight</h1>
<%= form_with(model: @flight, local: true) do |form| %>

<p>
  <%= form.label :bord_number %><br />
  <%= form.number_field :bord_number %>
</p>

<p>
  <%= form.label :passengers_count %><br />
  <%= form.number_field :passengers_count %>
</p>

<p>
  <%= form.submit %>
</p>
<% end %>
<%= link_to 'Back', flights_path %>
