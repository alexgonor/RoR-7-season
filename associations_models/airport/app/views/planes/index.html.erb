<h1>Listing planes</h1>
<%= link_to 'New plane', new_flight_plane_path %>
<table>
  <tr>
    <th>Model</th>
    <th>Max speed</th>
    <th></th>
  </tr>

  <% @planes.each do |plane| %>
  <tr>
    <td><%= plane.model %></td>
    <td><%= plane.max_speed %></td>
    <td><%= link_to 'Show', flight_plane_path(@flight, plane) %></td>
    <td><%= link_to 'Edit', edit_flight_plane_path(@flight, plane) %></td>
    <td><%= link_to 'Destroy', flight_plane_path(@flight, plane),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>
<br>
<br>
<%= will_paginate @planes %>
<%= link_to 'Root', flights_path %>|
<%= link_to 'Back', flights_path %>
