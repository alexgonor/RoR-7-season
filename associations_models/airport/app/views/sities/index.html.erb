<h1>Listing cities</h1>
<%= link_to 'New sity', new_flight_plane_country_sity_path %>
<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

  <% @sities.each do |sity| %>
  <tr>
    <td><%= sity.name %></td>
    <td><%= link_to 'Show', flight_plane_country_sity_path(@flight, @plane, @country, sity) %></td>
    <td><%= link_to 'Edit', edit_flight_plane_country_sity_path(@flight, @plane, @country, sity) %></td>
    <td><%= link_to 'Destroy', flight_plane_country_sity_path(@flight, @plane, @country, sity),
            method: :delete,
            data: { confirm: 'Are you sure?' }%></td>
  </tr>
  <% end %>
</table>
