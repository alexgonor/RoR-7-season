<h2>Add new waiter</h2>
<%= form_with scope: :waiter, url: cook_waiters_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br />
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.file_field :avatar %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back', cook_waiters_path %>
