<h1>Listing cars</h1>
<%= link_to 'New car', new_car_path %>
<table>
  <tr>
    <th>Model</th>
    <th>Color</th>
    <th></th>
  </tr>

  <% @cars.each do |car| %>
    <tr>
      <td><%= car.model %></td>
      <td><%= car.color %></td>
      <td><%= link_to 'Show', car_path(car) %></td>
      <td><%= link_to 'Edit', edit_car_path(car) %></td>
      <td><%= link_to 'Destroy', car_path(car),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
