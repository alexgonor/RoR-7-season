<h1>Listing songs</h1>
<%= link_to 'New song', new_song_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th></th>
  </tr>

  <% @songs.each do |song| %>
    <tr>
      <td><%= song.title %></td>
      <td><%= song.author %></td>
      <td><%= link_to 'Show', song_path(song) %></td>
      <td><%= link_to 'Edit', edit_song_path(song) %></td>
      <td><%= link_to 'Destroy', song_path(song),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
